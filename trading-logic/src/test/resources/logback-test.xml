<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Allow color output in the console -->
    <conversionRule conversionWord="coloredLevel" converterClass="com.example.ColoredLevelConverter" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%thread] %highlight(%-5level) %logger{36} %yellow([%M]) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>